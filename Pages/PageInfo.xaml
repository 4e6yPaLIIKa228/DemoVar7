<Page x:Class="Demo7.Pages.PageInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demo7.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageInfo">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <Button Style="{StaticResource mainbtn}" Name="BtnMaterial" Content="Материалы" Click="BtnMaterial_Click" />
                <Button Style="{StaticResource mainbtn}" Name="BtnAddMaterial" Content="Добавить Материалы" Click="BtnAddMaterial_Click"/>
                <Button Style="{StaticResource mainbtn}" Name="BtnPostavki" Content="Поставщики"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
